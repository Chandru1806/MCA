    {
      "name": "PDF Upload",
      "item": [
        {
          "name": "Upload PDF",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.environment.set('file_id', jsonData.data.file_id);",
                  "    pm.environment.set('std_csv', jsonData.data.std_csv);",
                  "    pm.environment.set('rej_csv', jsonData.data.rej_csv);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "pdf",
                  "type": "file",
                  "src": ""
                },
                {
                  "key": "bank",
                  "value": "HDFC",
                  "type": "text",
                  "description": "Bank name (HDFC, KOTAK, SBI, ICICI, AXIS, CUB, IDFC)"
                }
              ]
            },
            "url": {
              "raw": "{{base_url}}/api/pdf/upload",
              "host": ["{{base_url}}"],
              "path": ["api", "pdf", "upload"]
            }
          }
        },
        {
          "name": "Download CSV",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{access_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/api/pdf/download/{{std_csv}}",
              "host": ["{{base_url}}"],
              "path": ["api", "pdf", "download", "{{std_csv}}"]
            }
          }
        }
      ]
